{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "typeRoots": [ "typings" ]
  },
  "include": [
    "src/*.ts"
  ]
}
