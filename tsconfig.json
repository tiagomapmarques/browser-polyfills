{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib",
    "module": "commonjs",
    "declaration": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "typeRoots": [ "node_modules/@types", "typings" ]
  },
  "include": [
    "./index.ts",
    "src/*.ts"
  ]
}
